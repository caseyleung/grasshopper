{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "types": ["element-plus/global", "node"],
    "baseUrl": "./", // 解析非相对模块的基地址，默认是当前目录
    "paths": {
      // 路径映射，相当于baseUrl
      "@/*": ["src/*"],
      "@": ["src"],
    }
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/*d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/*.vue",
  ]
}